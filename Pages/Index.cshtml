@page
@model IndexModel
@{
}

<div style="margin-top: 30px;">
    <form method="post">
        <div class="form-group">
            <label asp-for="Year" class="control-label"></label>
            <input asp-for="Year" class="form-control" />
        </div>

        <div class="form-group">
            <br />
            <input type="submit" value="Get Zodiac" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-success">Clear</a>
        </div>
    </form>
</div>

@if (!string.IsNullOrEmpty(Model.Zodiac))
{
    <div class="alert alert-success" role="alert">
    <img src="@Url.Content(Model.ImagePath!)" />
    <p>Your zodiac is <b>@Model.Zodiac!</b></p>
</div>
}

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger" role="alert">
    <p>@Model.Error</p>
</div>
}
</div>